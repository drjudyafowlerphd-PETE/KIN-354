                correct: 2,
                explanation: "This objective involves comparing concepts and explaining knowledge about fitness and how the body works. Standard 2 focuses on applying knowledge related to movement and fitness concepts."
            },
            {
                objective: "The learner will be able to demonstrate leadership by facilitating group decision-making and ensuring all team members have opportunities to contribute during a project-based activity.",
                correct: 3,
                explanation: "This objective emphasizes leadership, group dynamics, and inclusive participation. Standard 3 addresses developing social skills including leadership and communication."
            },
            {
                objective: "The learner will be able to self-select physical activities based on personal interests and describe how participating in these activities contributes to their overall well-being.",
                correct: 4,
                explanation: "This objective focuses on personal choice, identifying activities of interest, and recognizing personal benefits. Standard 4 addresses identifying benefits and choosing to engage in physical activity."
            }
        ];

        let currentQuestionIndex = 0;
        let score = 0;
        let attempts = 0;
        let shuffledQuestions = [];

        function shuffleArray(array) {
            const shuffled = [...array];
            for (let i = shuffled.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
            }
            return shuffled;
        }

        function initQuiz() {
            shuffledQuestions = shuffleArray(quizQuestions).slice(0, 10);
            currentQuestionIndex = 0;
            score = 0;
            attempts = 0;
            updateScore();
            showQuestion();
        }

        function showQuestion() {
            if (currentQuestionIndex >= shuffledQuestions.length) {
                showComplete();
                return;
            }

            const question = shuffledQuestions[currentQuestionIndex];
            document.getElementById('current-question').textContent = currentQuestionIndex + 1;
            document.getElementById('total-questions').textContent = shuffledQuestions.length;
            document.getElementById('objective-text').textContent = '"' + question.objective + '"';
            
            const colors = ['var(--psychomotor)', '#0f2044', '#92d1b3', '#ffb71b'];
            const standards = [
                'Standard 1: Develops a variety of motor skills',
                'Standard 2: Applies knowledge related to movement and fitness concepts',
                'Standard 3: Develops social skills through movement',
                'Standard 4: Develops personal skills, identifies personal benefits, and chooses to engage'
            ];

            let optionsHTML = '';
            for (let i = 0; i < 4; i++) {
                optionsHTML += `
                    <button class="answer-option" onclick="checkAnswer(${i + 1})" style="background: white; border: 2px solid ${colors[i]}; padding: 20px; border-radius: 10px; text-align: left; cursor: pointer; transition: all 0.3s; font-size: 1em; color: var(--text-dark); font-weight: 500;">
                        ${standards[i]}
                    </button>
                `;
            }
            
            document.getElementById('answer-options').innerHTML = optionsHTML;
            document.getElementById('feedback').style.display = 'none';
            document.getElementById('next-button').style.display = 'none';
        }

        function checkAnswer(selected) {
            const question = shuffledQuestions[currentQuestionIndex];
            const feedback = document.getElementById('feedback');
            const buttons = document.querySelectorAll('.answer-option');
            
            attempts++;
            
            buttons.forEach(button => {
                button.style.pointerEvents = 'none';
                button.style.opacity = '0.6';
            });

            buttons[selected - 1].style.opacity = '1';
            
            if (selected === question.correct) {
                score++;
                buttons[selected - 1].style.background = 'linear-gradient(135deg, #e8f8f3 0%, #d1f0e5 100%)';
                buttons[selected - 1].style.borderColor = 'var(--uncg-green)';
                feedback.style.background = 'linear-gradient(135deg, #e8f8f3 0%, #d1f0e5 100%)';
                feedback.style.borderLeft = '5px solid var(--uncg-green)';
                feedback.innerHTML = `
                    <div style="color: #2d7a5f; font-weight: 600; font-size: 1.1em; margin-bottom: 10px;">âœ“ Correct!</div>
                    <div style="color: #1f5444;">${question.explanation}</div>
                `;
            } else {
                buttons[selected - 1].style.background = 'linear-gradient(135deg, #fee2e2 0%, #fecaca 100%)';
                buttons[selected - 1].style.borderColor = '#dc2626';
                buttons[question.correct - 1].style.opacity = '1';
                buttons[question.correct - 1].style.background = 'linear-gradient(135deg, #e8f8f3 0%, #d1f0e5 100%)';
                buttons[question.correct - 1].style.borderColor = 'var(--uncg-green)';
                feedback.style.background = 'linear-gradient(135deg, #fff8e1 0%, #ffe9a3 100%)';
                feedback.style.borderLeft = '5px solid #ffb71b';
                feedback.innerHTML = `
                    <div style="color: #8b6914; font-weight: 600; font-size: 1.1em; margin-bottom: 10px;">Not quite. The correct answer is Standard ${question.correct}.</div>
                    <div style="color: #6b5416;">${question.explanation}</div>
                `;
            }
            
            feedback.style.display = 'block';
            document.getElementById('next-button').style.display = 'inline-block';
            updateScore();
        }

        function nextQuestion() {
            currentQuestionIndex++;
            showQuestion();
        }

        function updateScore() {
            document.getElementById('score').textContent = score;
            document.getElementById('attempts').textContent = attempts;
        }

        function showComplete() {
            document.getElementById('question-card').style.display = 'none';
            document.getElementById('quiz-complete').style.display = 'block';
            document.getElementById('quiz-header').style.display = 'none';
            
            const percentage = Math.round((score / attempts) * 100);
            document.getElementById('final-score').textContent = score;
            document.getElementById('final-total').textContent = attempts;
            document.getElementById('percentage').textContent = percentage;
            
            let message = '';
            if (percentage === 100) {
                message = 'ðŸŒŸ Perfect score! You have excellent understanding of the four standards!';
            } else if (percentage >= 80) {
                message = 'ðŸŽ¯ Great job! You have a strong grasp of how objectives align with the standards.';
            } else if (percentage >= 60) {
                message = 'ðŸ“š Good effort! Review the standards and try again to improve your understanding.';
            } else {
                message = 'ðŸ’ª Keep practicing! Review each standard carefully and try the quiz again.';
            }
            
            document.getElementById('performance-message').textContent = message;
        }

        function resetQuiz() {
            document.getElementById('question-card').style.display = 'block';
            document.getElementById('quiz-complete').style.display = 'none';
            document.getElementById('quiz-header').style.display = 'block';
            initQuiz();
        }

        function switchTab(index) {
            const tabs = document.querySelectorAll('.tab');
            const contents = document.querySelectorAll('.tab-content');
            
            tabs.forEach((tab, i) => {
                if (i === index) {
                    tab.classList.add('active');
                    contents[i].classList.add('active');
                } else {
                    tab.classList.remove('active');
                    contents[i].classList.remove('active');
                }
            });

            // Initialize quiz when switching to quiz tab
            if (index === 3 && currentQuestionIndex === 0 && attempts === 0) {
                initQuiz();
            }
        }

        // Initialize quiz on page load if quiz tab is active
        document.addEventListener('DOMContentLoaded', function() {
            // Quiz will initialize when user clicks on the tab
        });
    </script>
</body>
